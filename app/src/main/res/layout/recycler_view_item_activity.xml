<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_start_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_end_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_category"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_created_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

       </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>