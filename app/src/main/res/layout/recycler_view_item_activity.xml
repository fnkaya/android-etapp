<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/image_view_activity_image"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:scaleType="centerCrop"
               android:alpha="0.5"
               android:src="@drawable/icon_image"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxLines="1"
               android:textStyle="bold"
               android:layout_margin="8dp"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxLines="3"
               android:ellipsize="end"
               android:layout_margin="8dp"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/text_view_activity_start_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/background_activity_date"
               android:layout_gravity="end"
               android:layout_margin="8dp"
               android:paddingVertical="4dp"
               android:paddingHorizontal="8dp"
               android:textStyle="bold"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorLightGrey"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="8dp"
               android:gravity="center">

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/text_view_activity_favorite"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/icon_favorite"
                   android:drawablePadding="8dp"
                   android:layout_marginHorizontal="64dp"
                   android:text="0"
                   android:textStyle="bold"
                   android:foreground="?attr/selectableItemBackground"/>

               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/text_view_activity_share"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableStart="@drawable/icon_share"
                   android:drawablePadding="8dp"
                   android:layout_marginHorizontal="64dp"
                   android:textStyle="bold"
                   android:foreground="?attr/selectableItemBackground"/>

           </LinearLayout>

       </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>